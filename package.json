  "devDependencies": {
    "@casper124578/eslint-config": "^4.4.0",
    "@types/node": "^18.7.23",
    "@typescript-eslint/parser": "^5.35.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "@types/inquirer": "^8.2.1",
    "@vercel/ncc": "^0.34.0",
    "typescript": "^4.8.2"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": false,
    "printWidth": 120,
